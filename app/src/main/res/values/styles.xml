<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Toolbar -->

    <style name="PoGoToolbar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/appbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/appbar_padding</item>
        <item name="android:paddingBottom">@dimen/appbar_padding</item>
        <item name="android:paddingStart">@dimen/appbar_padding</item>
        <item name="android:paddingEnd">@dimen/appbar_padding</item>
    </style>

    <style name="ToolbarIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:tintMode">src_in</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">@dimen/appbar_icon_size</item>
        <item name="android:layout_height">@dimen/appbar_icon_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ToolbarTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Layouts -->
    <style name="FullscreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FullscreenLayout_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/layout_padding_screen</item>
    </style>

    <style name="CardViewLayout" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_default</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!-- Texts -->

    <style name="TextStyle_header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_edittext">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_default">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_sub">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_sub_highlighted">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/redCancel</item>
    </style>

    <style name="TextStyle_error">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!-- Buttons -->

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button_selector</item>
        <item name="android:padding">@dimen/text_margin</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>

    <style name="ButtonStyle_bold" parent="ButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle_margin" parent="ButtonStyle">
        <item name="android:layout_margin">@dimen/layout_margin_small</item>
    </style>

    <style name="SegmentedControlButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_margin</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>

    <style name="FABEx_menu_button" parent="Widget.Design.FloatingActionButton">
        <item name="fab_addButtonColorNormal">@color/colorPrimary</item>
        <item name="fab_addButtonColorPressed">@color/colorPrimaryDark</item>
        <item name="fab_addButtonSize">normal</item>
        <item name="fab_addButtonPlusIconColor">@color/white</item>
    </style>

    <style name="FABEx_menu_subbutton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
    </style>

    <style name="Image">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ImageButton" parent="Image">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_image_button_state_selector</item>
    </style>

    <!-- Label -->

    <style name="FABEx_label">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
