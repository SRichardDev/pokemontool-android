<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph" app:startDestination="@id/blankFragment">

    <fragment android:id="@+id/pokestopFragment" android:name="io.stanc.pogoradar.screen.pokestop.PokestopFragment"
              android:label="PokestopFragment"
              tools:layout="@layout/fragment_pokestop"/>
    <fragment android:id="@+id/policyFragment" android:name="io.stanc.pogoradar.screen.PolicyFragment"
              android:label="PolicyFragment"
              tools:layout="@layout/fragment_policy"/>
    <fragment android:id="@+id/arenaFragment" android:name="io.stanc.pogoradar.screen.arena.ArenaFragment"
              android:label="ArenaFragment"
              tools:layout="@layout/fragment_arena_info"/>
    <fragment android:id="@+id/mapSettingsFragment" android:name="io.stanc.pogoradar.screen.MapSettingsFragment"
              android:label="MapSettingsFragment"
              tools:layout="@layout/fragment_map_settings"/>
    <fragment android:id="@+id/mapItemCreationFragment" android:name="io.stanc.pogoradar.screen.mapitemcreation.MapItemCreationFragment"
              android:label="MapItemCreationFragment"
              tools:layout="@layout/layout_viewpager_flow"/>
    <fragment android:id="@+id/accountFragment" android:name="io.stanc.pogoradar.screen.account.AccountFragment"
              android:label="AccountFragment"/>
    <fragment android:id="@+id/blankFragment" android:name="io.stanc.pogoradar.screen.BlankFragment"
              android:label="fragment_blank" tools:layout="@layout/fragment_blank">
        <action android:id="@+id/action_blankFragment_to_pokestopFragment"
                app:destination="@id/pokestopFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
        <action android:id="@+id/action_blankFragment_to_policyFragment"
                app:destination="@id/policyFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
        <action android:id="@+id/action_blankFragment_to_arenaFragment"
                app:destination="@id/arenaFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
        <action android:id="@+id/action_blankFragment_to_mapSettingsFragment"
                app:destination="@id/mapSettingsFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
        <action android:id="@+id/action_blankFragment_to_mapItemCreationFragment"
                app:destination="@id/mapItemCreationFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
        <action android:id="@+id/action_blankFragment_to_accountFragment"
                app:destination="@id/accountFragment"
                app:enterAnim="@anim/nav_enter"
                app:exitAnim="@anim/nav_exit"
                app:popEnterAnim="@anim/nav_pop_enter"
                app:popExitAnim="@anim/nav_pop_exit"/>
    </fragment>
</navigation>