<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="questViewModel"
            type="io.stanc.pogoradar.viewmodel.pokestop.QuestViewModel" />
        <variable
            name="pokestopViewModel"
            type="io.stanc.pogoradar.viewmodel.pokestop.PokestopViewModel" />
        <import type="android.view.View"/>
    </data>

    <ScrollView style="@style/FullscreenLayout">

        <LinearLayout style="@style/FullscreenLayout_padding"
            android:orientation="vertical">

            <fragment android:name="io.stanc.pogoradar.subscreen.BaseMapFragment"
                      android:id="@+id/map_item_mapview"
                      android:layout_width="match_parent"
                      android:layout_height="250dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginBottom="@dimen/layout_margin_small"/>

            <Button
                android:id="@+id/pokestop_button_new_quest"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pokestop_quest_button_new_quest"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:visibility="@{questViewModel.questExists ? View.GONE : View.VISIBLE}"
                tools:visibility="visible"/>

            <include layout="@layout/cardview_pokestop_quest"
                     bind:questViewModel="@{questViewModel}"
                     android:visibility="@{questViewModel.questExists ? View.VISIBLE : View.GONE}"
                     tools:visibility="visible"/>

            <include layout="@layout/cardview_map_item_infos"
                bind:mapItemInfoViewModel="@{pokestopViewModel.mapItemInfoViewModel}"/>

        </LinearLayout>

    </ScrollView>

</layout>