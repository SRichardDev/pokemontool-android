<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="io.stanc.pogoradar.viewpager.ViewPagerViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_padding_screen"
        android:background="@color/white">

        <io.stanc.pogoradar.viewpager.ControlFlowViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewpager_button"
            android:background="@color/white">

            <androidx.viewpager.widget.PagerTitleStrip
                android:id="@+id/viewpager_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingBottom="@dimen/layout_margin_default"/>

        </io.stanc.pogoradar.viewpager.ControlFlowViewPager>

        <Button
            android:id="@+id/viewpager_button"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewpager"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{viewModel.viewPagerButtonText}"
            android:enabled="@{viewModel.viewPagerButtonEnabled}"
            android:layout_marginTop="@dimen/layout_margin_default"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>