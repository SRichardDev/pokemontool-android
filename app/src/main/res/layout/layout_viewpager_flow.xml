<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="io.stanc.pogoradar.viewpager.ViewPagerViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/FullscreenLayout"
        android:paddingTop="@dimen/layout_padding_screen">

        <io.stanc.pogoradar.viewpager.ControlFlowViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewpager_button"
            android:background="@color/white">

        </io.stanc.pogoradar.viewpager.ControlFlowViewPager>

        <Button
            android:id="@+id/viewpager_button"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewpager"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{viewModel.viewPagerButtonText}"
            android:enabled="@{viewModel.viewPagerButtonEnabled}"
            android:layout_margin="@dimen/layout_padding_screen"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>