<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="io.stanc.pogoradar.viewmodel.MapItemCreationViewModel" />
        <import type="io.stanc.pogoradar.viewmodel.MapItemCreationViewModel.Type"/>
    </data>

    <ScrollView style="@style/FullscreenLayout">

        <LinearLayout style="@style/FullscreenLayout_padding"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_map_item_check_data"/>

            <fragment android:name="io.stanc.pogoradar.subscreen.BaseMapFragment"
                      android:id="@+id/map_item_mapview"
                      android:layout_width="match_parent"
                      android:layout_height="250dp"
                      android:layout_marginTop="@dimen/layout_margin_small"/>

            <TextView
                style="@style/TextStyle_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_default"
                android:layout_gravity="center"
                android:text="@{viewModel.nameWithType}"
                tools:text="MapType: Name"/>

            <TextView
                style="@style/TextStyle_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_map_item_check_data_subtext"
                android:layout_marginTop="@dimen/layout_margin_default"/>

        </LinearLayout>

    </ScrollView>

</layout>