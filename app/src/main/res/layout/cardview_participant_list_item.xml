<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent">

    <androidx.cardview.widget.CardView style="@style/CardViewLayout"
        android:id="@+id/cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_participant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycleview_list_item_height"
            android:orientation="horizontal"
            android:padding="@dimen/layout_margin_small">

            <ImageView
                android:id="@+id/list_item_participant_image"
                style="@style/Image"
                android:layout_width="@dimen/recycleview_list_item_height"
                android:layout_height="match_parent"
                android:src="@drawable/icon_star_gold_30dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="contentDescription"/>

            <TextView
                android:id="@+id/list_item_participant_level"
                style="@style/TextStyle_bold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/list_item_participant_image"
                app:layout_constraintStart_toStartOf="@id/list_item_participant_image"
                app:layout_constraintEnd_toEndOf="@id/list_item_participant_image"
                app:layout_constraintBottom_toBottomOf="@id/list_item_participant_image"
                android:gravity="center"
                android:text="0"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/list_item_participant_name"
                style="@style/TextStyle_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/list_item_participant_image"
                tools:text="Participant name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>