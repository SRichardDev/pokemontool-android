<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="io.stanc.pogoradar.viewmodel.MapItemViewModel" />
        <import type="android.view.View"/>
        <import type="io.stanc.pogoradar.viewmodel.MapItemViewModel.Type"/>
        <import type="io.stanc.pogoradar.utils.SegmentedControlView.Selection"/>
    </data>

    <io.stanc.pogoradar.utils.InterceptableScrollView
        android:orientation="vertical"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_map_item_which_item_to_add"/>

            <io.stanc.pogoradar.utils.SegmentedControlView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_small"
                app:textLeft="@{Type.Pokestop.name}"
                app:textRight="@{Type.Arena.name}"
                app:onSelectionChangeListener="@{viewModel.onSelectedStateDidChange}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:visibility="@{viewModel.type == Type.Arena ? View.VISIBLE : View.GONE}"
                tools:visibility="visible">

                <TextView
                    style="@style/TextStyle_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_map_item_isex_arena"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_default"
                    android:checked="@={viewModel.isEx}"/>

            </LinearLayout>

            <TextView
                style="@style/TextStyle_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_map_item_position_correct"
                android:layout_marginTop="@dimen/layout_margin_default"/>

            <TextView
                style="@style/TextStyle_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_map_item_position_correct_subtext"
                android:layout_marginTop="@dimen/layout_margin_small"/>

            <fragment android:name="io.stanc.pogoradar.subscreen.BaseMapFragment"
                      android:id="@+id/map_item_mapview"
                      android:layout_width="match_parent"
                      android:layout_height="250dp"
                      android:layout_marginTop="@dimen/layout_margin_small"/>

        </LinearLayout>

    </io.stanc.pogoradar.utils.InterceptableScrollView>

</layout>