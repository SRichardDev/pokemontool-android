<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="raidViewModel"
			type="io.stanc.pogoradar.viewmodel.RaidViewModel"/>
	</data>

	<androidx.cardview.widget.CardView style="@style/CardViewLayout">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:padding="@dimen/layout_margin_small">

			<TextView
				style="@style/TextStyle_bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start"
				android:text="@string/arena_raid_participants"/>

			<TextView
				style="@style/TextStyle_bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@{raidViewModel.numParticipants}"
				tools:text="1000"/>

			<Button
				android:id="@+id/arena_raid_button_participants_list"
				style="@style/ButtonStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="@dimen/layout_margin_small"
				android:text="@string/arena_raid_participants_list"/>

		</LinearLayout>

	</androidx.cardview.widget.CardView>

</layout>