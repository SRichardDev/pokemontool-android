<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="@dimen/image_size_medium"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/medal_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_medal_none_96dp"/>

    <TextView
        android:id="@+id/medal_textView_number"
        style="@style/TextStyle_bold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/medal_imageview"
        app:layout_constraintStart_toStartOf="@id/medal_imageview"
        app:layout_constraintEnd_toEndOf="@id/medal_imageview"
        app:layout_constraintBottom_toBottomOf="@id/medal_imageview"
        android:gravity="center"
        android:text="0"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/medal_textView_description"
        style="@style/TextStyle_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/medal_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Debug Medal Text"/>

</androidx.constraintlayout.widget.ConstraintLayout>