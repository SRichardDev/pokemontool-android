<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_margin_default"
        android:layout_marginBottom="@dimen/chat_margin_default"
        android:layout_marginStart="@dimen/layout_padding_screen"
        android:layout_marginEnd="@dimen/layout_padding_screen">

    <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/chat_margin_default"
            android:padding="@dimen/chat_margin_small"
            android:orientation="vertical">

        <TextView
                style="@style/TextStyle_bold"
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="debug text message"/>

    </LinearLayout>

    <TextView
            style="@style/TextStyle_sub"
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bubble"
            app:layout_constraintEnd_toEndOf="@id/bubble"
            tools:text="24:00"/>

</androidx.constraintlayout.widget.ConstraintLayout>