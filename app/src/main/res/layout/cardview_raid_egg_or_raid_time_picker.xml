<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_height="wrap_content"
			  android:layout_width="match_parent">

	<androidx.cardview.widget.CardView style="@style/CardViewLayout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/layout_margin_small">

			<TextView
				style="@style/TextStyle_bold"
				android:id="@+id/raid_text_egg_time"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="start"
				android:text="@string/raid_text_time_egg"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_marginTop="@dimen/layout_margin_small">

				<NumberPicker
					android:id="@+id/raid_picker_time_egg_hours"
					android:layout_height="@dimen/raid_picker_height"
					android:layout_width="wrap_content"/>

				<NumberPicker
					android:id="@+id/raid_picker_time_egg_minutes"
					android:layout_height="@dimen/raid_picker_height"
					android:layout_width="wrap_content"
					android:layout_marginStart="@dimen/layout_margin_small"/>

			</LinearLayout>

			<io.stanc.pogoradar.utils.SegmentedControlView
				android:id="@+id/raid_segmentedcontrolview_time_hour_minutes"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/layout_margin_small"/>

		</LinearLayout>

	</androidx.cardview.widget.CardView>
</LinearLayout>