<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="io.stanc.pogoradar.viewmodel.LoginViewModel" />
    </data>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingStart="@dimen/layout_padding_screen"
      android:paddingEnd="@dimen/layout_padding_screen">

        <TextView
            style="@style/TextStyle_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/authentication_login_name_description"/>

        <EditText
            style="@style/TextStyle_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:hint="@string/authentication_login_name_edit_hint_text"
            android:text="@={viewModel.name}"/>

    </LinearLayout>

</layout>
