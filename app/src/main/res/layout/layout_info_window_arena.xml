<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/background_info_window"
            android:padding="@dimen/layout_margin_small">

        <ImageView
                android:id="@+id/info_window_arena_imageview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_arena_30dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/info_window_arena_textview_header"
                style="@style/TextStyle_header"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                tools:text="very very very long long long debug header text"/>

        <TextView
                android:id="@+id/info_window_arena_textview_subheader"
                style="@style/TextStyle_sub_highlighted"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:textAlignment="center"
                android:text="@string/map_info_window_arena_subheader_default"/>

        <TextView
                android:id="@+id/info_window_arena_button_info"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:text="@string/map_info_window_arena_button_info"/>

    </LinearLayout>

</LinearLayout>