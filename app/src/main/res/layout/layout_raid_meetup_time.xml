<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_divider"/>

    <TextView
        style="@style/TextStyle_bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:text="@string/raid_text_time_meetup"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_margin_small">

        <NumberPicker
            android:id="@+id/raid_meetup_time_hour"
            android:layout_height="@dimen/raid_picker_height"
            android:layout_width="wrap_content"/>

        <NumberPicker
            android:id="@+id/raid_meetup_time_minutes"
            android:layout_height="@dimen/raid_picker_height"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_small"/>

    </LinearLayout>

</LinearLayout>