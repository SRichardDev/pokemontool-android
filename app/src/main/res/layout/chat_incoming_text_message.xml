<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_margin_small"
        android:layout_marginBottom="@dimen/chat_margin_small"
        android:layout_marginStart="@dimen/layout_padding_screen"
        android:layout_marginEnd="@dimen/layout_padding_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/chat_margin_small"
            android:orientation="vertical">

        <TextView
                style="@style/TextStyle_sub"
                android:id="@+id/messageUserName"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="wrap"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/barrier"
                android:layout_marginEnd="@dimen/chat_margin_small"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="DebugUser: "/>

        <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/barrier"
                                                  app:barrierDirection="end"
                                                  app:constraint_referenced_ids="messageUserName"/>

        <TextView
                style="@style/TextStyle_sub"
                android:id="@+id/messageTime"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier"
                android:layout_marginStart="@dimen/chat_margin_small"
                app:layout_constraintHorizontal_bias="1.0"
                tools:text="24:00"/>

        <TextView
                style="@style/TextStyle_bold"
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/messageUserName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/chat_margin_small"
                tools:text="Lorem"/>
        <!--tools:text="Lorem ipsum dolor sit amet, ei mei legimus pertinacia elaboraret, eius inciderint no mea, audire offendit vim at. Usu id feugiat epicuri splendide. Cu mea saepe ridens comprehensam, possit noluisse id vix. Eum decore inermis cu."/>-->

        <ImageView
                android:id="@+id/messageUserAvatar"
                android:layout_width="@dimen/chat_avatar_size"
                android:layout_height="@dimen/chat_avatar_size"
                android:layout_gravity="start"
                app:layout_constraintTop_toBottomOf="@id/messageText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/chat_margin_small"
                tools:ignore="ContentDescription"
                tools:src="@drawable/icon_star_gold_30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>